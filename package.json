{
  "name": "rapgpt",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx server.ts",
    "build": "next build",
    "start": "NODE_ENV=production tsx server.ts",
    "lint": "biome check",
    "format": "biome format --write",
    "create-battle": "tsx scripts/create-battle.ts",
    "ngrok": "ngrok http --host-header=rewrite --domain=yameen.ngrok.app 3000",
    "db:generate:dev": "dotenv -e .env.local -- drizzle-kit generate",
    "db:migrate:prod": "dotenv -e .env.production -- drizzle-kit migrate",
    "db:push:dev": "dotenv -e .env.local -- drizzle-kit push",
    "db:push:prod": "dotenv -e .env.production -- drizzle-kit push",
    "db:studio:dev": "dotenv -e .env.local -- drizzle-kit studio",
    "db:studio:prod": "dotenv -e .env.production -- drizzle-kit studio",
    "db:backup:prod": "BACKUP_ENV=prod dotenv -e .env.production -- tsx scripts/backup-db.ts",
    "db:backup:dev": "BACKUP_ENV=dev dotenv -e .env.local -- tsx scripts/backup-db.ts",
    "db:restore:dev": "dotenv -e .env.local -- tsx scripts/restore-db.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.26",
    "@ai-sdk/openai": "^2.0.65",
    "@ai-sdk/react": "^2.0.68",
    "@anthropic-ai/sdk": "^0.68.0",
    "@clerk/nextjs": "^6.34.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/ws": "^8.18.1",
    "@vercel/postgres": "^0.10.0",
    "ai": "^5.0.68",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.6",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.545.0",
    "nanoid": "^5.1.6",
    "next": "15.5.9",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sanitize-html": "^2.17.0",
    "sonner": "^2.0.7",
    "svix": "^1.78.0",
    "tailwind-merge": "^3.3.1",
    "ws": "^8.18.3",
    "zod": "^4.1.12",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@clerk/backend": "^2.19.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19",
    "@types/sanitize-html": "^2.16.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vercel": "^48.5.0"
  }
}
